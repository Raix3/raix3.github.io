    <script>
        var tournamentSize = 16;
        var participants = [];
        var bracket = null;
        var winners = {};
        var editingParticipant = null;
        var matchHistory = [];

        function setTournamentSize(size) {
            tournamentSize = size;
            var buttons = document.querySelectorAll('.size-btn');
            for (var i = 0; i < buttons.length; i++) {
                buttons[i].classList.remove('active');
            }
            event.target.classList.add('active');
            createInputFields();
            resetTournament();
        }

        function createInputFields() {
            var grid = document.getElementById('inputGrid');
            grid.innerHTML = '';
            participants = [];
            for (var i = 0; i < tournamentSize; i++) {
                participants.push('');
            }
            
            for (var i = 0; i < tournamentSize; i++) {
                var input = document.createElement('input');
                input.type = 'text';
                input.placeholder = 'Trainer ' + (i + 1);
                input.value = participants[i];
                input.setAttribute('data-index', i);
                input.oninput = function(e) {
                    var idx = parseInt(e.target.getAttribute('data-index'));
                    participants[idx] = e.target.value;
                };
                grid.appendChild(input);
            }
        }

        function shuffleAndStart() {
            var filled = [];
            for (var i = 0; i < participants.length; i++) {
                if (participants[i].trim() !== '') {
                    filled.push(participants[i]);
                }
            }
            
            if (filled.length < 2) {
                alert('Bitte gib mindestens 2 Teilnehmer ein!');
                return;
            }

            var shuffled = filled.slice();
            for (var i = shuffled.length - 1; i > 0; i--) {
                var j = Math.floor(Math.random() * (i + 1));
                var temp = shuffled[i];
                shuffled[i] = shuffled[j];
                shuffled[j] = temp;
            }

            while (shuffled.length < tournamentSize) {
                shuffled.push('Freilos');
            }

            bracket = shuffled;
            winners = {};
            document.getElementById('inputSection').style.display = 'none';
            document.getElementById('bracketSection').style.display = 'block';
            renderBracket();
        }

        function renderBracket() {
            var bracketEl = document.getElementById('bracket');
            bracketEl.innerHTML = '';

            var rounds = Math.log2(tournamentSize);
            
            for (var round = 0; round < rounds; round++) {
                var roundDiv = document.createElement('div');
                roundDiv.className = 'round';
                
                var title = document.createElement('div');
                title.className = 'round-title';
                var roundNames = {
                    0: tournamentSize === 32 ? 'Runde 1' : tournamentSize === 16 ? 'Achtelfinale' : 'Viertelfinale',
                    1: tournamentSize === 32 ? 'Runde 2' : tournamentSize === 16 ? 'Viertelfinale' : 'Halbfinale',
                    2: tournamentSize === 32 ? 'Achtelfinale' : tournamentSize === 16 ? 'Halbfinale' : 'Finale',
                    3: tournamentSize === 32 ? 'Viertelfinale' : 'Finale',
                    4: tournamentSize === 32 ? 'Halbfinale' : '',
                    5: 'Finale'
                };
                title.textContent = roundNames[round] || (round === rounds - 1 ? 'Finale' : 'Runde ' + (round + 1));
                roundDiv.appendChild(title);

                var matchesInRound = tournamentSize / Math.pow(2, round + 1);
                
                for (var match = 0; match < matchesInRound; match++) {
                    var matchDiv = document.createElement('div');
                    matchDiv.className = 'match';
                    
                    if (round < rounds - 1) {
                        var connector = document.createElement('div');
                        connector.className = 'match-connector';
                        matchDiv.appendChild(connector);
                    }
                    
                    var p1, p2;
                    if (round === 0) {
                        p1 = bracket[match * 2];
                        p2 = bracket[match * 2 + 1];
                    } else {
                        p1 = winners[round - 1 + '-' + (match * 2)] || 'TBD';
                        p2 = winners[round - 1 + '-' + (match * 2 + 1)] || 'TBD';
                    }

                    var winner = winners[round + '-' + match];

                    var players = [p1, p2];
                    for (var idx = 0; idx < players.length; idx++) {
                        var p = players[idx];
                        var participantDiv = document.createElement('div');
                        participantDiv.className = 'participant';
                        if (winner === p) participantDiv.classList.add('winner');
                        
                        var nameSpan = document.createElement('span');
                        nameSpan.className = 'participant-name';
                        nameSpan.textContent = p;
                        
                        var editBtn = document.createElement('button');
                        editBtn.className = 'edit-btn';
                        editBtn.textContent = '\u270F\uFE0F';
                        editBtn.setAttribute('data-round', round);
                        editBtn.setAttribute('data-match', match);
                        editBtn.setAttribute('data-idx', idx);
                        editBtn.onclick = function(e) {
                            e.stopPropagation();
                            var r = parseInt(e.target.getAttribute('data-round'));
                            var m = parseInt(e.target.getAttribute('data-match'));
                            var i = parseInt(e.target.getAttribute('data-idx'));
                            openEditModal(r, m, i);
                        };

                        participantDiv.setAttribute('data-participant', p);
                        participantDiv.setAttribute('data-round', round);
                        participantDiv.setAttribute('data-match', match);
                        participantDiv.onclick = function(e) {
                            var pname = e.currentTarget.getAttribute('data-participant');
                            var r = parseInt(e.currentTarget.getAttribute('data-round'));
                            var m = parseInt(e.currentTarget.getAttribute('data-match'));
                            selectWinner(r, m, pname);
                        };
                        participantDiv.appendChild(nameSpan);
                        if (p !== 'TBD' && p !== 'Freilos') {
                            participantDiv.appendChild(editBtn);
                        }
                        matchDiv.appendChild(participantDiv);
                    }

                    roundDiv.appendChild(matchDiv);
                }

                bracketEl.appendChild(roundDiv);
            }

            updateChampionDisplay();
            updateStats();
        }

        function selectWinner(round, match, participant) {
            if (participant === 'TBD' || participant === 'Freilos') return;
            var oldWinner = winners[round + '-' + match];
            winners[round + '-' + match] = participant;
            
            if (oldWinner !== participant) {
                matchHistory.push({
                    round: round,
                    match: match,
                    winner: participant,
                    timestamp: new Date().toISOString()
                });
            }
            
            renderBracket();
            updateStats();
        }

        function updateChampionDisplay() {
            var finalRound = Math.log2(tournamentSize) - 1;
            var champion = winners[finalRound + '-0'];
            var display = document.getElementById('championDisplay');
            
            if (champion) {
                display.innerHTML = '<div class="champion-display">&#127942; Champion: ' + champion + ' &#127942;</div>';
            } else {
                display.innerHTML = '';
            }
        }

        function openEditModal(round, match, participantIdx) {
            var currentName;
            if (round === 0) {
                currentName = bracket[match * 2 + participantIdx];
            } else {
                var prevMatch = match * 2 + participantIdx;
                currentName = winners[(round - 1) + '-' + prevMatch] || 'TBD';
            }

            if (currentName === 'TBD' || currentName === 'Freilos') return;

            editingParticipant = { round: round, match: match, participantIdx: participantIdx, currentName: currentName };
            document.getElementById('editInput').value = currentName;
            document.getElementById('editModal').classList.add('active');
        }

        function closeEditModal() {
            document.getElementById('editModal').classList.remove('active');
            editingParticipant = null;
        }

        function saveEdit() {
            var newName = document.getElementById('editInput').value.trim();
            if (!newName || !editingParticipant) return;

            var round = editingParticipant.round;
            var match = editingParticipant.match;
            var participantIdx = editingParticipant.participantIdx;
            var currentName = editingParticipant.currentName;

            if (round === 0) {
                var bracketIdx = match * 2 + participantIdx;
                bracket[bracketIdx] = newName;
            }

            var keys = Object.keys(winners);
            for (var i = 0; i < keys.length; i++) {
                if (winners[keys[i]] === currentName) {
                    winners[keys[i]] = newName;
                }
            }

            closeEditModal();
            renderBracket();
        }

        function resetTournament() {
            bracket = null;
            winners = {};
            matchHistory = [];
            document.getElementById('inputSection').style.display = 'block';
            document.getElementById('bracketSection').style.display = 'none';
            document.getElementById('statsPanel').classList.remove('active');
            createInputFields();
        }

        function saveTournament() {
            var tournamentData = {
                size: tournamentSize,
                participants: participants,
                bracket: bracket,
                winners: winners,
                matchHistory: matchHistory,
                timestamp: new Date().toISOString()
            };
            
            var dataStr = JSON.stringify(tournamentData, null, 2);
            var dataBlob = new Blob([dataStr], { type: 'application/json' });
            var url = URL.createObjectURL(dataBlob);
            
            var link = document.createElement('a');
            link.href = url;
            link.download = 'pokemon-turnier-' + new Date().toISOString().split('T')[0] + '.json';
            link.click();
            
            URL.revokeObjectURL(url);
        }

        function loadTournament() {
            var input = document.createElement('input');
            input.type = 'file';
            input.accept = 'application/json';
            input.onchange = function(e) {
                var file = e.target.files[0];
                if (!file) return;
                
                var reader = new FileReader();
                reader.onload = function(event) {
                    try {
                        var tournamentData = JSON.parse(event.target.result);
                        tournamentSize = tournamentData.size;
                        bracket = tournamentData.bracket || null;
                        winners = tournamentData.winners || {};
                        matchHistory = tournamentData.matchHistory || [];
                        
                        var buttons = document.querySelectorAll('.size-btn');
                        for (var i = 0; i < buttons.length; i++) {
                            buttons[i].classList.remove('active');
                            var btnText = buttons[i].textContent.trim();
                            var btnSize = parseInt(btnText);
                            if (btnSize === tournamentSize) {
                                buttons[i].classList.add('active');
                            }
                        }
                        
                        if (bracket && bracket.length > 0) {
                            document.getElementById('inputSection').style.display = 'none';
                            document.getElementById('bracketSection').style.display = 'block';
                            renderBracket();
                            updateStats();
                        } else if (tournamentData.participants && tournamentData.participants.length > 0) {
                            participants = tournamentData.participants;
                            createInputFields();
                            var inputs = document.querySelectorAll('#inputGrid input');
                            for (var i = 0; i < inputs.length && i < participants.length; i++) {
                                inputs[i].value = participants[i];
                            }
                            document.getElementById('inputSection').style.display = 'block';
                            document.getElementById('bracketSection').style.display = 'none';
                        } else {
                            createInputFields();
                            document.getElementById('inputSection').style.display = 'block';
                            document.getElementById('bracketSection').style.display = 'none';
                        }
                    } catch (error) {
                        alert('Fehler beim Laden der Datei. Bitte überprüfe das Format.');
                        console.error('Load error:', error);
                    }
                };
                reader.readAsText(file);
            };
            input.click();
        }

        function toggleStats() {
            var panel = document.getElementById('statsPanel');
            panel.classList.toggle('active');
            if (panel.classList.contains('active')) {
                updateStats();
            }
        }

        function updateStats() {
            var statsGrid = document.getElementById('statsGrid');
            if (!statsGrid) return;
            
            var totalMatches = 0;
            var completedMatches = 0;
            var rounds = Math.log2(tournamentSize);
            
            for (var round = 0; round < rounds; round++) {
                var matchesInRound = tournamentSize / Math.pow(2, round + 1);
                totalMatches += matchesInRound;
                for (var match = 0; match < matchesInRound; match++) {
                    if (winners[round + '-' + match]) {
                        completedMatches++;
                    }
                }
            }
            
            var participantsCount = 0;
            if (bracket) {
                for (var i = 0; i < bracket.length; i++) {
                    if (bracket[i] && bracket[i] !== 'Freilos') {
                        participantsCount++;
                    }
                }
            }
            
            var finalRound = rounds - 1;
            var champion = winners[finalRound + '-0'] || 'Noch nicht bestimmt';
            
            statsGrid.innerHTML = 
                '<div class="stat-item">' +
                    '<div class="stat-label">Teilnehmer</div>' +
                    '<div class="stat-value">' + participantsCount + '</div>' +
                '</div>' +
                '<div class="stat-item">' +
                    '<div class="stat-label">Gesamt Matches</div>' +
                    '<div class="stat-value">' + totalMatches + '</div>' +
                '</div>' +
                '<div class="stat-item">' +
                    '<div class="stat-label">Abgeschlossen</div>' +
                    '<div class="stat-value">' + completedMatches + '</div>' +
                '</div>' +
                '<div class="stat-item">' +
                    '<div class="stat-label">Fortschritt</div>' +
                    '<div class="stat-value">' + Math.round((completedMatches / totalMatches) * 100) + '%</div>' +
                '</div>' +
                '<div class="stat-item">' +
                    '<div class="stat-label">Champion</div>' +
                    '<div class="stat-value" style="font-size: 1.2em;">' + champion + '</div>' +
                '</div>';
        }

        function exportBracket() {
            var bracketSection = document.getElementById('bracketSection');
            if (!bracketSection) return;

            var originalDisplay = bracketSection.style.display;
            bracketSection.style.display = 'block';
            
            setTimeout(function() {
                html2canvas(bracketSection, {
                    backgroundColor: '#0a0a1a',
                    scale: 2,
                    logging: false,
                    useCORS: true
                }).then(function(canvas) {
                    var link = document.createElement('a');
                    link.download = 'pokemon-turnier-bracket-' + new Date().toISOString().split('T')[0] + '.png';
                    link.href = canvas.toDataURL('image/png');
                    link.click();
                    bracketSection.style.display = originalDisplay;
                }).catch(function(error) {
                    alert('Export fehlgeschlagen. Bitte installiere html2canvas oder verwende die Speicher-Funktion.');
                    console.error('Export error:', error);
                    bracketSection.style.display = originalDisplay;
                });
            }, 100);
        }

        createInputFields();
    </script>
</body>
</html>
